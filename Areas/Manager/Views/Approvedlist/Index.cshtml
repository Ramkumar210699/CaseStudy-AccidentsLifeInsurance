@model CaseStudy.ViewModel.PolicyDetailsAll
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}


@*<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />*@
<script src="~/Scripts/modernizr-2.6.2.js"></script>
<div class="tab-content">
    <h3 class="text-uppercase p-2 text-center">Customer Policy Claimed Details</h3>
    <table class="table table-bordered table-striped">
        <thead class="thead-dark text-white">
            <tr>
                <th>@Html.DisplayNameFor(m => Model.vwpolicyclaim.FirstOrDefault().ApplicantName)</th>
                <th>@Html.DisplayNameFor(m => Model.vwpolicyclaim.FirstOrDefault().DateOfInjury)</th>
                <th>@Html.DisplayNameFor(m => Model.vwpolicyclaim.FirstOrDefault().RegisteredID)</th>
                <th>@Html.DisplayNameFor(m => Model.vwpolicyclaim.FirstOrDefault().InjuryDescription)</th>
                <th>@Html.DisplayNameFor(m => Model.vwpolicyclaim.FirstOrDefault().PolicyAmount)</th>
                <th>@Html.DisplayNameFor(m => Model.vwpolicyclaim.FirstOrDefault().ReimbursePercent)</th>
                <th>@Html.DisplayNameFor(m => Model.vwpolicyclaim.FirstOrDefault().ReimburseAmount)</th>
                <th>@Html.DisplayNameFor(m => Model.vwpolicyclaim.FirstOrDefault().ApprovedOrRejected)</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.vwpolicyclaim.ToList())
            {
                <tr>
                    <td>@item.ApplicantName</td>
                    <td>@item.DateOfInjury</td>
                    <td>@item.RegisteredID</td>
                    <td>@item.InjuryDescription</td>
                    <td>@item.PolicyAmount</td>
                    <td>@item.ReimbursePercent</td>
                    <td>@item.ReimburseAmount</td>
                    <td>@item.ApprovedOrRejected</td>

                   
                </tr>

            }
        </tbody>
    </table>

</div>


