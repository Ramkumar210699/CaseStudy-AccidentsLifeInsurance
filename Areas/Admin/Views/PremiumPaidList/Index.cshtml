@model CaseStudy.ViewModel.PolicyDetailsAll
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<head>
    <style>
        .main {
            background-image: url("https://media.istockphoto.com/photos/round-podium-or-pedestal-with-green-backgound-picture-id1299157256?b=1&k=20&m=1299157256&s=170667a&w=0&h=K1_5faLgJFynzHgBRyHrPKJCL24k9Oy_2-NFadPVjiw=");
            background-size: 150%;
            height: contain;
        }
    </style>
</head>
@*<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />*@
<script src="~/Scripts/modernizr-2.6.2.js"></script>
<h3>Payment Details</h3>
<div class="tab-content">
    <table class="table table-bordered table-striped main">
        <thead class="thead-dark text-white">
            <tr>

                <th>@Html.DisplayNameFor(m => Model.premiumPayments.FirstOrDefault().RegistredID)</th>
                <th>@Html.DisplayNameFor(m => Model.premiumPayments.FirstOrDefault().DateOfPayment)</th>
                <th>@Html.DisplayNameFor(m => Model.premiumPayments.First().PayAmount)</th>
                <th>@Html.DisplayNameFor(m => Model.premiumPayments.FirstOrDefault().PayType)</th>
                <th>@Html.DisplayNameFor(m => Model.premiumPayments.FirstOrDefault().ReceiptNumber)</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.premiumPayments.ToList())
            {
                <tr>

                    <td>@item.RegistredID</td>
                    <td>@item.DateOfPayment</td>
                    <td>@item.PayAmount</td>
                    <td>@item.PayType</td>
                    <td>@item.ReceiptNumber</td>
                </tr>

            }
        </tbody>
    </table>
</div>
